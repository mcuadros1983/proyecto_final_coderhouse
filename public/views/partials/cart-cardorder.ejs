<div class="border rounded d-flex overflow-hidden" style="height: 100px; width: 800px;">
  <div class="header" style="width: 200px; height: 200px;">
    <img src="/images/<%= object.thumbnail %>" style="height: 100%; width: 100%; object-fit: cover;" alt="<%= object.title %>">
  </div>
  <div class="p-3 d-flex flex-column justify-content-center">
    <div class="d-flex align-items-center">
      <h3 class="fs-4 fw-lighter mb-0"><%= object.title %> <span class="fs-5 fw-normal">x <%= object.in_cart %></span></h3>
      <p class="fs-3 mb-0" style="margin-left: 300px;">$<%= object.price * object.in_cart %></p>
    </div>
  </div>
</div>